{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",    
    "parameters": { 
        "apimServiceName": {
            "type": "string",
            "defaultValue": "[concat(resourceGroup().name,'-apim')]"
        
        }
    },
    "variables": {  },    
    "resources": [  
        {
            "type": "Microsoft.ApiManagement/service/apis",
            "apiVersion": "2019-12-01",
            "name": "[concat(parameters('apimServiceName'), '/sample-api-v2')]",
            "dependsOn": [],
            "properties": {
                "apiVersion":"v2", 
                "apiVersionSetId":"[resourceId('Microsoft.ApiManagement/service/apiVersionSets', parameters('apimServiceName'), 'SampleAPIVersionSet')]",
                "displayName": "Sample API",
                "apiRevision": "1",
                "description": "Version 2 Revision 1",
                "subscriptionRequired": true,
                "path": "sampleapiv2",
                "protocols": [
                    "https"
                ],
                "isCurrent": true
            }
        },        
        {
            "type": "Microsoft.ApiManagement/service/tags",
            "apiVersion": "2019-12-01",
            "name": "[concat(parameters('apimServiceName'), '/deployed-from-devops')]",
            "dependsOn": [],
            "properties": {
                "displayName": "Deployed From DevOps"
            }
        },
        {
            "type": "Microsoft.ApiManagement/service/apis/tags",
            "apiVersion": "2019-12-01",
            "name": "[concat(parameters('apimServiceName'), '/sample-api-v2/deployed-from-devops')]",
            "dependsOn": [
                "[resourceId('Microsoft.ApiManagement/service/apis', parameters('apimServiceName'), 'sample-api-v2')]"                
            ],
            "properties": {}
        }        
    ],
    "outputs": {  }
}